<Window x:Class="TextEditorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorApp"
        mc:Ignorable="d"
        Title="TextEditor" Height="450" Width="600">

    <Window.Resources>
        <LinearGradientBrush x:Key="LinearPanelBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="Yellow" Offset="0.0" />
            <GradientStop Color="Blue" Offset="0.5" />
            <GradientStop Color="Yellow" Offset="1.0" />
        </LinearGradientBrush>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Margin="5">
            <StackPanel Orientation="Horizontal" Background="{StaticResource LinearPanelBrush}">
                <Button ToolTip="Відкрити">
                    <Image Source="images/open.png" Width="40" Height="40"/>
                </Button>
                <Button ToolTip="Стерти">
                    <Image Source="images/clear.png" Width="40" Height="40"/>
                </Button>
                <Button ToolTip="Копіювати">
                    <Image Source="images/copy.png" Width="40" Height="40"/>
                </Button>
                <Button ToolTip="Вставити">
                    <Image Source="images/paste.png" Width="40" Height="40"/>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Margin="5,0,5,5" Background="{StaticResource LinearPanelBrush}">
            <TextBox AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="14"
                     BorderThickness="0"
                     Margin="15"/>
        </Border>

        <Button Grid.Row="2"
                Content="OK" 
                HorizontalAlignment="Center"
                Padding="25,3,25,3"
                Margin="0,5,0,10"
                Style="{x:Null}"/>
    </Grid>
</Window>