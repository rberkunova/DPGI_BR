<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="650">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Label" VerticalAlignment="Center" Margin="2,0,5,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>
            <TextBox Text="TextBox" Width="70" Margin="2"/>

            <Label Content="Label" VerticalAlignment="Center" Margin="2,10,5,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
            <TextBox Text="TextBox" Width="70" Margin="2,10,2,0"/>
        </WrapPanel>

        <Button Grid.Row="1" 
                Content="Button"
                HorizontalAlignment="Center"
                Margin="0,15,0,20"
                Padding="25,5"/>
    </Grid>
</Window>