<Window x:Class="TextEditorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorApp"
        mc:Ignorable="d"
        Title="TextEditor" Height="450" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Button ToolTip="Відкрити">
                    <Image Source="images/open.png" Width="40" Height="40"/>
                </Button>
                <Button ToolTip="Стерти">
                    <Image Source="images/clear.png" Width="40" Height="40"/>
                </Button>
                <Button ToolTip="Копіювати">
                    <Image Source="images/copy.png" Width="40" Height="40"/>
                </Button>
                <Button ToolTip="Вставити">
                    <Image Source="images/paste.png" Width="40" Height="40"/>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="#FFCBBEBE" BorderThickness="2" CornerRadius="10" Margin="5,0,5,5">
            <TextBox AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontSize="14"
                     BorderThickness="0"/>
        </Border>

        <Button Grid.Row="2"
                Content="OK" 
                HorizontalAlignment="Center"
                Padding="25,3,25,3"
                Margin="0,5,0,10"/>
    </Grid>
</Window>